#!/usr/bin/env bash

# Ensure brew is setup properly
brew doctor

# Make sure we’re using the latest Homebrew
brew update

# Upgrade any already-installed formulae
brew upgrade

# Install GNU core utilities (those that come with OS X are outdated)
brew install coreutils
echo "Don’t forget to add $(brew --prefix coreutils)/libexec/gnubin to \$PATH."
# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew install findutils
# Install Bash 4
brew install bash

# Install wget with IRI support
brew install wget --enable-iri

# Install more recent versions of some OS X tools
brew tap homebrew/dupes
brew install homebrew/dupes/grep
brew install homebrew/dupes/gzip
brew install homebrew/dupes/less
brew install homebrew/dupes/lsof
brew install homebrew/dupes/rsync
brew install homebrew/dupes/tcpdump
brew install homebrew/dupes/unzip

# Install other useful binaries
brew install ack
brew install android-sdk
brew install auto-scaling
brew install autossh
brew install aws-cfn-tools
brew install aws-iam-tools
brew install awscli
brew install curl-ca-bundle
brew install dsocks
brew install ec2-api-tools 
brew install elb-tools
brew install emacs
brew install git
brew install git-extras
brew install git-flow
brew install gource
brew install hping
brew install jq
brew install nmap 
brew install pwgen
brew install rbenv 
brew install rds-command-line-tools 
brew install reattach-to-user-namespace
brew install s3cmd
brew install spark
brew install the_silver_searcher
brew install tmux
brew install zsh
brew tap homebrew/versions
brew install lua52

# Remove outdated versions from the cellar
brew cleanup